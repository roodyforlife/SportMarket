@model SportMarket.ViewModels.ChangeRoleViewModel

<link href="~/css/create.css" rel="stylesheet" />
<div class="create">
    <form asp-controller="AdminPanel" asp-action="EditRole" method="post">
        <div class="create__content">
            <div class="create__content__title">
                <h2>Редагування ролі</h2>
            </div>
            <div class="create__content__items">
                <div class="create__content__item">
                    <div class="create__content__item__title">
                        <h3>Зміна ролей для користувача @Model.User.Email </h3>
                    </div>
                    <div class="create__input">
                        <select name="roles" class="select__checkbox" id="custom_select" multiple asp-items="Model.AllRoles"></select>
                    </div>
                </div>
                <div class="create__content__item">
                    <div class="create__item__block">
                        <div class="create__item__button"><input type="submit" asp-route-userId="@Model.User.Id" value="Змінити"></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/category.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>