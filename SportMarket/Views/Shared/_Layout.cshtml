<!DOCTYPE html>
<html lang="en" class="_scroll">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/nullStyle.css">
    <link rel="stylesheet" href="~/css/site.css">
    <title>SportMarket</title>
</head>

<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <div class="alert"></div>
    <div class="basket"></div>
    <div class="header__profile__list">
        <div class="header__profile__list__content">
            <div class="close__form"></div>
            @if (ViewBag.User.User is not null)
            {
                <div class="header__list__info">
                    <div class="header__info__logo"><img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.User.User.Image))" alt="Alternate Text" /></div>
                    <div class="header__info__text _unselectable">
                        <h4>@ViewBag.User.User.Name @ViewBag.User.User.Surname</h4>
                    </div>
                </div>
                <span>
                    <h4 class="_unselectable">Мій профіль:</h4>
                </span>
                <ul>
                    <a asp-controller="Account" asp-action="Edit" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Налаштування</h5>
                    </li>
                    </a>
                    <a asp-controller="Home" asp-action="MyOrders" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Мої замовлення</h5>
                    </li>
                    </a>
                    @if (ViewBag.User.Roles.Contains("admin") || ViewBag.User.Roles.Contains("manager"))
                    {
                        <a asp-controller="AdminPanel" asp-action="Products" class="header__list__ul__item _unselectable">
                        <li>
                            <h5>Список товарів</h5>
                        </li>
                        </a>
                        if (ViewBag.User.Roles.Contains("admin"))
                        {
                            <a asp-controller="AdminPanel" asp-action="Users" class="header__list__ul__item _unselectable">
                            <li>
                                <h5>Список користувачів</h5>
                            </li>
                            </a>
                        }
                        <a asp-controller="AdminPanel" asp-action="Categories" class="header__list__ul__item _unselectable">
                        <li>
                            <h5>Список категорій</h5>
                        </li>
                        </a>
                        <a asp-controller="AdminPanel" asp-action="Orders" class="header__list__ul__item _unselectable">
                        <li>
                            <h5>Замовлення</h5>
                        </li>
                        </a>
                    }
                    <a asp-controller="Home" asp-action="Likes" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Обрані</h5>
                    </li>
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Вийти</h5>
                    </li>
                    </a>
                </ul>
            }
            else
            {
                <ul>
                    <a asp-controller="Account" asp-action="Login" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Увійти</h5>
                    </li>
                    </a>
                    <a asp-controller="Account" asp-action="Registration" class="header__list__ul__item _unselectable">
                    <li>
                        <h5>Зареєструватися</h5>
                    </li>
                    </a>
                </ul>
            }
        </div>
    </div>
